<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khachsan"
    tools:context=".Auth.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/backgroumo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="77dp"
            android:text="ĐỔI MẬT KHẨU"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/myPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:hint="mật khẩu cũ"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:background="@drawable/txt"/>
        <EditText
            android:id="@+id/myNewPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:hint="mật khẩu mới"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:background="@drawable/txt"/>
        <EditText
            android:id="@+id/myConfirmPasswrd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:hint="xác nhận mật khẩu"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:paddingLeft="20dp"
            android:background="@drawable/txt"/>
        <Button
            android:id="@+id/myBtnChagePassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn"
            android:text="ĐỔI MẬT KHẨU"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>