<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khachsan"
    tools:context=".Auth.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/backgroumo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="77dp"
            android:text="ĐĂNG NHẬP"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/myEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:background="@drawable/txt"
            android:textColorHint="#fff"
            android:textColor="#fff"/>
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/myPassLogin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:hint="Nhập mật khẩu"
            android:background="@drawable/txt"
            android:inputType="textPassword"
            android:textColorHint="#fff"
            android:textColor="#fff" />
        <Button
            android:id="@+id/myBtnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn"
            android:text="Đăng nhập"
            android:textColor="#fff"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/myReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qên mật khẩu."
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/myBtnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn"
            android:text="Đăng ký"
            android:textColor="#fff"
            android:textStyle="bold"/>/
    </LinearLayout>


</RelativeLayout>